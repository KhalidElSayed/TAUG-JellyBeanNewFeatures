<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/taug_social_ref" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_main"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/taug" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/followme"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/np_gplus"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/about_googleplus" />

                <ImageView
                    android:id="@+id/np_twitter"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/about_twitter" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/open_source_project"
                android:text="@string/opensource"
                android:layout_marginTop="10dp"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/taug_social_ref"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        layout="@layout/taug_social" />

</RelativeLayout>